<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="edu.slu.parks.healthwatch.history.graph.RecordFragment">

    <TextView
        android:id="@+id/txt_systolic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="16dp"
        android:drawableStart="@mipmap/ic_favorite_black_24dp"
        android:padding="8dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_diastolic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="16dp"
        android:drawableStart="@mipmap/ic_favorite_border_black_24dp"
        android:padding="8dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="16dp"
        android:drawableStart="@mipmap/ic_info_black_24dp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="16dp"
        android:drawableStart="@mipmap/ic_access_time_black_24dp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/txt_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="16dp"
        android:drawableStart="@mipmap/ic_place_black_24dp"
        android:padding="8dp" />


    <TextView
        android:id="@+id/txt_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="16dp"
        android:drawableStart="@mipmap/ic_comment_black_24dp"
        android:padding="8dp" />


</LinearLayout>
